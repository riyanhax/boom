<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.ys.project.dao.productionUpload.ProductionUploadMapper">

	<!-- 파일 업로드 -->
	<insert id="insertUpload" parameterType="Production_uploadVO">
		INSERT INTO
		PRODUCTION_UPLOAD (UUID ,
		UPLOADPATH,FILENAME,FILETYPE,FOLDER,PRO_NUM)
		VALUES(#{uuid},#{uploadpath},#{fileName},#{fileType},#{folder},#{pro_num})

	</insert>

	<delete id="delete">
		DELETE FROM PRODUCTION_UPLOAD WHERE UUID = #{uuid}
	</delete>
	
	<select id="fineByPro" resultType="ProductionVO">
		SELECT * FROM PRODUCTION_UPLOAD WHERE PRO_NUM = #{pro_num}
	</select>

</mapper>